{
  "Insert a CSS variable": {
    "prefix": "var",
    "body": "var(--${1:name});"
  },
  "Declare var CSS": {
    "prefix": "dvar",
    "body": "--${1:name}: ${2:value};"
  },
  "Insert rgb value": {
    "prefix": "rgb",
    "body": "rgb(${1:red}, ${2:green}, ${3:blue});"
  },
  "Insert rgba value": {
    "prefix": "rbga",
    "body": "rgba(${1:red}, ${2:green}, ${3:blue}, ${4:alpha});"
  },
  "Insert hsl value": {
    "prefix": "hsl",
    "body": "hsl(${1:hue}, ${2:saturation}, ${3:lightness});"
  },
  "Insert hsla value": {
    "prefix": "hsla",
    "body": "hsl(${1:hue}, ${2:saturation}, ${3:lightness}, ${4:alpha});"
  }
}
